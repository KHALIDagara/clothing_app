<% content_for :title, "Products" %>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>
    <h2> line by me </h2>
    <%= product.title %> 
    <%= product.image %> 
    <%= image_tag thumbnail(product.image) %> 
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
